<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Select_Profile">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:backgroundTint="#4A6BD0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="UnusedAttribute">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Your Profile"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_30sdp"
            android:fontFamily="@font/amaranth_bold"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_45sdp"
            tools:ignore="HardcodedText" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_25sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/_100sdp"
        android:backgroundTint="#EEEEEE"
        tools:ignore="UnusedAttribute">

        <androidx.cardview.widget.CardView
            android:id="@+id/student"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_80sdp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:outlineSpotShadowColor="@color/black"
            tools:ignore="UnusedAttribute">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:background="@drawable/student"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students"
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_118sdp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_35sdp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/company"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginTop="@dimen/_280sdp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginStart="@dimen/_80sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            android:outlineAmbientShadowColor="@color/black">

            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:background="@drawable/componys"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Componys"
                android:textColor="#000000"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_118sdp"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_30sdp"
                tools:ignore="HardcodedText" />

        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>